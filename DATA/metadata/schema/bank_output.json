{
    "entity_type": "BANK",
    "version": "1.0",
    "description": "Schema định nghĩa các cột đầu ra cho thực thể BANK (Ngân hàng)",
    "columns": {
        "symbol": {
            "type": "string",
            "required": true,
            "description": "Mã chứng khoán"
        },
        "report_date": {
            "type": "string",
            "format": "date",
            "required": true,
            "description": "Ngày báo cáo (YYYY-MM-DD)"
        },
        "year": {
            "type": "integer",
            "required": true,
            "description": "Năm tài chính"
        },
        "quarter": {
            "type": "integer",
            "required": true,
            "description": "Quý tài chính"
        },
        "nii": {
            "type": "float",
            "required": true,
            "description": "Thu nhập lãi thuần (Tỷ VND)"
        },
        "toi": {
            "type": "float",
            "required": true,
            "description": "Tổng thu nhập hoạt động (Tỷ VND)"
        },
        "npatmi": {
            "type": "float",
            "required": true,
            "description": "Lợi nhuận sau thuế của cổ đông ngân hàng mẹ (Tỷ VND)"
        },
        "customer_loan": {
            "type": "float",
            "required": true,
            "description": "Cho vay khách hàng (Tỷ VND)"
        },
        "customer_deposit": {
            "type": "float",
            "required": true,
            "description": "Tiền gửi khách hàng (Tỷ VND)"
        },
        "npl_ratio": {
            "type": "float",
            "required": true,
            "description": "Tỷ lệ nợ xấu (%)"
        },
        "casa_ratio": {
            "type": "float",
            "required": false,
            "description": "Tỷ lệ CASA (%)"
        },
        "nim_q": {
            "type": "float",
            "required": false,
            "description": "Biên lãi ròng (Quarterly) (%)"
        },
        "cir": {
            "type": "float",
            "required": false,
            "description": "Tỷ lệ chi phí trên thu nhập (%)"
        },
        "ldr_pure": {
            "type": "float",
            "required": false,
            "description": "Tỷ lệ Cho vay trên Huy động (LDR) (%)"
        },
        "roea_ttm": {
            "type": "float",
            "required": true,
            "description": "ROE trung bình năm (TTM) (%)"
        },
        "roaa_ttm": {
            "type": "float",
            "required": true,
            "description": "ROA trung bình năm (TTM) (%)"
        }
    }
}