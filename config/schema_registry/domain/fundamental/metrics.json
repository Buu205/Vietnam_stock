{
  "name": "Fundamental Metrics Definitions",
  "version": "1.0.0",
  "description": "Financial metrics definitions for fundamental analysis",
  "metric_categories": {
    "profitability": {
      "description": "Profitability metrics",
      "metrics": {
        "roe": {
          "name": "Return on Equity",
          "code": "roe",
          "formula": "net_income / total_equity",
          "unit": "%",
          "type": "percentage",
          "typical_range": [5, 30],
          "entity_types": ["COMPANY", "BANK", "INSURANCE", "SECURITY"]
        },
        "roa": {
          "name": "Return on Assets",
          "code": "roa",
          "formula": "net_income / total_assets",
          "unit": "%",
          "type": "percentage",
          "typical_range": [1, 15],
          "entity_types": ["COMPANY", "BANK", "INSURANCE", "SECURITY"]
        },
        "gross_margin": {
          "name": "Gross Margin",
          "code": "gross_margin",
          "formula": "(revenue - cost_of_goods_sold) / revenue",
          "unit": "%",
          "type": "percentage",
          "typical_range": [10, 50],
          "entity_types": ["COMPANY"]
        },
        "net_margin": {
          "name": "Net Margin",
          "code": "net_margin",
          "formula": "net_income / revenue",
          "unit": "%",
          "type": "percentage",
          "typical_range": [5, 25],
          "entity_types": ["COMPANY", "SECURITY"]
        },
        "nim": {
          "name": "Net Interest Margin",
          "code": "nim",
          "formula": "(interest_income - interest_expense) / average_assets",
          "unit": "%",
          "type": "percentage",
          "typical_range": [2, 5],
          "entity_types": ["BANK"]
        }
      }
    },
    "growth": {
      "description": "Growth metrics",
      "metrics": {
        "revenue_growth": {
          "name": "Revenue Growth",
          "code": "revenue_growth",
          "formula": "(current_revenue - previous_revenue) / previous_revenue",
          "unit": "%",
          "type": "percentage",
          "entity_types": ["COMPANY", "BANK", "INSURANCE", "SECURITY"]
        },
        "earnings_growth": {
          "name": "Earnings Growth",
          "code": "earnings_growth",
          "formula": "(current_net_income - previous_net_income) / previous_net_income",
          "unit": "%",
          "type": "percentage",
          "entity_types": ["COMPANY", "BANK", "INSURANCE", "SECURITY"]
        }
      }
    },
    "liquidity": {
      "description": "Liquidity metrics",
      "metrics": {
        "current_ratio": {
          "name": "Current Ratio",
          "code": "current_ratio",
          "formula": "current_assets / current_liabilities",
          "type": "ratio",
          "typical_range": [1, 3],
          "entity_types": ["COMPANY"]
        },
        "quick_ratio": {
          "name": "Quick Ratio",
          "code": "quick_ratio",
          "formula": "(current_assets - inventory) / current_liabilities",
          "type": "ratio",
          "typical_range": [0.5, 2],
          "entity_types": ["COMPANY"]
        }
      }
    },
    "leverage": {
      "description": "Leverage and debt metrics",
      "metrics": {
        "debt_to_equity": {
          "name": "Debt to Equity",
          "code": "debt_to_equity",
          "formula": "total_debt / total_equity",
          "type": "ratio",
          "typical_range": [0, 2],
          "entity_types": ["COMPANY"]
        },
        "car": {
          "name": "Capital Adequacy Ratio",
          "code": "car",
          "formula": "tier_1_capital + tier_2_capital / risk_weighted_assets",
          "unit": "%",
          "type": "percentage",
          "typical_range": [8, 15],
          "entity_types": ["BANK"]
        }
      }
    }
  },
  "data_structure": {
    "columns": ["ticker", "period", "metric_code", "value", "currency", "unit"],
    "required": ["ticker", "period", "metric_code", "value"],
    "period_formats": ["YYYY-MM-DD", "Q{quarter} {year}", "YYYY"]
  }
}
