{
  "_comment": "Copy this file to api_credentials.json and fill in your credentials. DO NOT commit api_credentials.json to git!",

  "_how_to_get_tokens": {
    "simplize": [
      "1. Login to https://simplize.vn",
      "2. Open DevTools (F12) → Network tab",
      "3. Find any request to api2.simplize.vn",
      "4. Copy 'Authorization: Bearer xxx' header (without 'Bearer ' prefix)",
      "5. Copy 'Cookie: JSESSIONID=xxx' value",
      "",
      "Or use Postman:",
      "- Import request from browser (Copy as cURL)",
      "- Headers will contain Authorization and Cookie"
    ],
    "fireant": [
      "1. Login to https://fireant.vn",
      "2. Open DevTools (F12) → Network tab",
      "3. Find request to restv2.fireant.vn",
      "4. Copy 'Authorization: Bearer xxx' (without 'Bearer ' prefix)"
    ]
  },

  "_endpoints_to_test": {
    "simplize_gov_bond": "https://api2.simplize.vn/api/historical/prices/ohlcv?ticker=TVC:VN05Y&size=10&interval=1d&type=economy",
    "simplize_rubber": "https://api2.simplize.vn/api/historical/prices/chart?ticker=TOCOM%3ATRB1!&period=1y",
    "simplize_wmp": "https://api2.simplize.vn/api/historical/prices/chart?ticker=NZX%3AWMP1!&period=1y",
    "fireant_vnm": "https://restv2.fireant.vn/symbols/VNM/profile"
  },

  "simplize": {
    "api_token": "YOUR_SIMPLIZE_API_TOKEN_HERE",
    "jsessionid": "YOUR_SIMPLIZE_JSESSIONID_HERE"
  },

  "fireant": {
    "bearer_token": "YOUR_FIREANT_BEARER_TOKEN_HERE"
  },

  "wichart": {
    "_note": "WiChart does not require authentication, just browser headers"
  }
}
